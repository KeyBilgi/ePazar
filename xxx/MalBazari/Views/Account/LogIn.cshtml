@{ 
    Layout = null;
}
@model Entities.Congrete.Blt0101Users
<head>
    <link href="~/css/bootstrap.css" rel="stylesheet" id="bootstrap-css">
    <link href="~/css/Accountcss/Login.css" rel="stylesheet" id="Login-css">
</head>

<div class="container">
    <div id="login-row" class="row justify-content-center align-items-center">
        <div id="login-column" class="col-md-6">
            <div class="box">
                <div class="shape1"></div>
                <div class="shape2"></div>
                <div class="shape3"></div>
                <div class="shape4"></div>
                <div class="shape5"></div>
                <div class="shape6"></div>
                <div class="shape7"></div>
                <div class="float">
                    <form class="form" action="LogIn" method="post">
                        <div class="form-group">
                            <label for="username" class="text-white">Username:</label><br>
                            <input type="text" name="Kod" id="username" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="password" class="text-white">Password:</label><br>
                            <input type="text" value=@Model.Email name="Password" id="password" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="submit" name="submit" class="btn btn-info btn-md" value="Log In">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>